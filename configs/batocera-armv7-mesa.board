include bootlin-armv7.common
include batocera-board.common

# Target definition
BR2_arm=y
BR2_ARM_EABIHF=y
BR2_ARM_FPU_NEON_VFPV4=y
BR2_PACKAGE_BATOCERA_TARGET_ARMV7_MESA=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char"
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/patches"

# Kernel
BR2_LINUX_KERNEL=n
BR2_LINUX_KERNEL_LATEST_VERSION=y

# GPU
BR2_PACKAGE_BATOCERA_LIMA_MESA3D=y
BR2_PACKAGE_BATOCERA_PANFROST_MESA3D=y
BR2_PACKAGE_BATOCERA_WAYLAND_SWAY=y

# Batocera Splash Support
BR2_PACKAGE_REGLINUX_SPLASH_FFPLAY=y
